@using EPiServer
@using EPiServer.ServiceLocation
@model EPiServer.Core.ContentReference
@if (Model != null)
{
    var contentRepository = ServiceLocator.Current.GetInstance<IContentRepository>();
    var image = contentRepository.Get<IContent>(Model) as ImageFile;
    <img src="@Url.ContentUrl(Model)" alt="@image.Name" title="@image.Copyright" />
}
